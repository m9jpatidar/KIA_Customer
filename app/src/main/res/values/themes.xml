<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MyApplication" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="BlackButtonStyle" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorButtonNormal">@color/black</item>
        <item name="background">@drawable/curve_black_background</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar.Bridge">
        <item name="android:statusBarColor">@color/lightPrimaryColor</item>
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryVariant">@color/white</item>
        <item name="colorSecondary">@color/lightPrimaryColor</item>
        <item name="colorSecondaryVariant">@color/lightPrimaryColor</item>
        <item name="android:colorBackground">@color/lightBackground</item>
        <item name="colorSurface">@color/white</item>
        <item name="colorError">@color/lightPrimaryColor</item>
        <item name="colorOnPrimary">@color/lightPrimaryColor</item>
        <item name="colorOnSecondary">@color/white</item>
        <item name="colorOnBackground">@color/black</item>
        <item name="colorOnSurface">@color/black</item>
        <item name="colorOnError">@color/white</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">false</item>
        <item name="android:windowLightNavigationBar" tools:ignore="NewApi">false</item>
        <item name="loginBackground">@color/white</item>
        <item name="loginBackgroundTint">@android:color/transparent</item>
        <item name="progressBarBackground">#80000000</item>
        <item name="colorAccent">@color/lightPrimaryColor</item>
        <item name="otpViewStyle">@style/AppTheme.OTPView</item>
    </style>

    <style name="AppTheme.OTPView" parent="OtpWidget.OtpView">
        <item name="itemBackground">@color/white</item>
        <item name="itemFillColor">@color/black</item>
        <item name="itemIconTint">@color/black</item>
        <item name="itemTextColor">@color/black</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.MaterialComponents.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.MaterialComponents.Light" />
</resources>